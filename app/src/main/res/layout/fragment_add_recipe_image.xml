<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddRecipeImageFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/imageURL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Image URL"
            android:inputType="textUri|textWebEditText"
            app:layout_constraintBottom_toTopOf="@+id/errorMsg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/newDrinkImage"
            app:layout_constraintTop_toBottomOf="@+id/newDrinkName" />

        <TextView
            android:id="@+id/errorMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Link not valid, please try again"
            app:layout_constraintBottom_toTopOf="@+id/submitImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/newDrinkImage" />

        <ImageView
            android:id="@+id/newDrinkImage"
            android:layout_width="200dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newDrinkName"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/submitImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClickLoadImage"
            android:text="Load Image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/newDrinkImage"
            app:layout_constraintTop_toBottomOf="@+id/errorMsg" />

        <EditText
            android:id="@+id/newDrinkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Drink Name"
            android:inputType="textPersonName"
            android:lineSpacingExtra="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/addIngredientsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClickAddIngredients"
            android:text="Edit Ingredients"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/newDrinkImage"
            app:layout_constraintTop_toBottomOf="@+id/submitImage" />

        <Button
            android:id="@+id/addMethodButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClickAddMethod"
            android:text="Edit Method"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/newDrinkImage"
            app:layout_constraintTop_toBottomOf="@+id/addIngredientsButton" />

        <!--<include
                android:id="@+id/previewDetail"
                layout="@layout/fragment_recipe_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addMethodButton" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>